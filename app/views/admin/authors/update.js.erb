$("tr#<%= @author.id %>").replaceWith("<%= j(render @author) %>");
<% if @author.errors.any? %>
  <% @author.errors.full_messages.each do |msg| %>
    var mess = "<%= msg %>";
    alert(mess.replace(/&#39;/g, "\'"));
  <% end %>
<% else %>
  alert("Update success !");
  $("#new-author form").remove()
  $("#new-author a").show()
<% end %>
